<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#2B2A2A"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="4"
        >
        <Button
            android:text="7"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="8"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="9"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="*"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="4"
        >
        <Button
            android:text="4"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="5"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="6"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="/"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="4"
        >
        <Button
            android:text="1"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="2"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="3"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="-"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="4"
        >
        <Button
            android:text="0"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="."
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="+"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
        <Button
            android:text="="
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>